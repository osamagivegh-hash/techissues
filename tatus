[32m+[m[32mconst arabicToEnglish: { [key: string]: string } = {[m
[32m+[m[32m    'ÿß': 'a', 'ÿ£': 'a', 'ÿ•': 'e', 'ÿ¢': 'a',[m
[32m+[m[32m    'ÿ®': 'b', 'ÿ™': 't', 'ÿ´': 'th',[m
