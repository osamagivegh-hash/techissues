[32m+[m[32m/**[m
[32m+[m[32m * Transliterate Arabic text to English[m
[32m+[m[32m */[m
[32m+[m[32mfunction transliterateArabic(text: string): string {[m
[32m+[m[32m    let result = '';[m
[32m+[m[32m    let i = 0;[m
[32m+[m[41m    [m
[32m+[m[32m    while (i < text.length) {[m
[32m+[m[32m        // Check for two-character combinations first (like 'ÿßŸÑ')[m
[32m+[m[32m        const twoChars = text.substring(i, i + 2);[m
[32m+[m[32m        if (arabicToEnglish[twoChars]) {[m
[32m+[m[32m            result += arabicToEnglish[twoChars];[m
[32m+[m[32m            i += 2;[m
[32m+[m[32m        } else {[m
[32m+[m[32m            const char = text[i];[m
[32m+[m[32m            result += arabicToEnglish[char] || char;[m
[32m+[m[32m            i++;[m
[32m+[m[32m        }[m
[32m+[m[32m    }[m
[32m+[m[41m    [m
[32m+[m[32m    return result;[m
[32m+[m[32m}[m
